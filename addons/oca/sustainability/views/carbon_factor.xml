<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="carbon_factor_tree" model="ir.ui.view">
            <field name="name">carbon.factor.list</field>
            <field name="model">carbon.factor</field>
            <field name="arch" type="xml">
                <list>
                    <field column_invisible="1" name="carbon_currency_id" />
                    <field column_invisible="1" name="carbon_compute_method" />
                    <field column_invisible="1" name="recent_value_id" />
                    <field name="name" />
                    <field
                        invisible="not recent_value_id  or not carbon_compute_method "
                        name="carbon_value"
                    />
                    <field
                        invisible="not recent_value_id  or not carbon_compute_method "
                        name="carbon_currency_label"
                        string=" "
                    />
                    <field
                        invisible="not recent_value_id  or not carbon_compute_method "
                        name="unit_label"
                    />
                    <field
                        name="uncertainty_percentage"
                        optional="show"
                        widget="percentage"
                    />
                    <field name="carbon_database_id" optional="show" />
                    <field name="carbon_contributor_id" optional="show" />
                    <field name="country_id" optional="show" />
                    <field name="country_group_id" optional="show" />
                    <field name="root" optional="hide" />
                    <field name="parent_id" optional="hide" />
                    <field name="category" optional="show" />
                    <field name="carbon_date" optional="hide" />
                    <field name="carbon_compute_method" optional="hide" />
                </list>
            </field>
        </record>
        <record id="carbon_factor_hierarchy" model="ir.ui.view">
            <field name="name">carbon.factor.hierarchy</field>
            <field name="model">carbon.factor</field>
            <field name="arch" type="xml">
                <hierarchy child_field="child_ids" draggable="1">
                    <field name="name" />
                    <templates>
                        <t t-name="hierarchy-box">
                            <div
                                t-if="record.carbon_value.raw_value"
                                t-attf-class="o_hierarchy_node_header bg-secondary d-flex gap-1 justify-content-center align-items-center px-2"
                            >
                                <field name="carbon_value" />
                                <field name="carbon_currency_label" />
                                <field name="unit_label" />
                            </div>
                            <div
                                t-else=""
                                class="o_hierarchy_node_header bg-secondary"
                            />
                            <div
                                class="o_hierarchy_node_body d-grid"
                                style="grid-template: auto 1fr;"
                            >
                                <div class="text-center p-2">
                                    <div t-if="record.name.raw_value">
                                        <span t-att-title="record.name.raw_value">
                                            <field
                                                name="name"
                                                class="oe_inline fw-bold"
                                            />
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </hierarchy>
            </field>
        </record>
        <record id="carbon_factor_filter" model="ir.ui.view">
            <field name="name">carbon.factor.select</field>
            <field name="model">carbon.factor</field>
            <field name="arch" type="xml">
                <search string="Search Emission Factor">
                    <field name="name" />
                    <field name="category" />
                    <field name="carbon_database_id" />
                    <field name="carbon_contributor_id" />
                    <field name="factor_value_type_id" string="Type" />
                    <field name="carbon_uom_id" />
                    <field name="country_id" />
                    <field name="country_group_id" />
                    <filter
                        domain="[('carbon_compute_method', '=', 'monetary')]"
                        name="monetary"
                        string="Monetary"
                    />
                    <filter
                        domain="[('carbon_compute_method', '=', 'physical')]"
                        name="physical"
                        string="Physical"
                    />
                    <separator />
                    <filter
                        domain="[('ghg_view_mode', '=', True)]"
                        name="ghg"
                        string="Detailed by gas"
                    />
                    <filter
                        domain="[('ghg_view_mode', '=', False)]"
                        name="physical"
                        string="Not detailed by gas"
                    />
                    <separator />
                    <filter
                        domain="[('carbon_line_origin_ids', '!=', False)]"
                        name="used_in_computation"
                        string="Used in computation"
                    />
                    <separator />
                    <filter
                        domain="[('active', '=', False)]"
                        name="archived"
                        string="Archived"
                    />
                    <group expand="0" string="Group By">
                        <filter
                            string="Root"
                            name="by_root"
                            context="{'group_by':'root'}"
                        />
                        <filter
                            string="Parent"
                            name="by_parent_id"
                            context="{'group_by':'parent_id'}"
                        />
                        <filter
                            string="Category"
                            name="by_category"
                            context="{'group_by':'category'}"
                        />
                        <separator />
                        <filter
                            string="Compute method"
                            name="by_carbon_compute_method"
                            context="{'group_by':'carbon_compute_method'}"
                        />
                        <filter
                            string="Database"
                            name="by_carbon_database_id"
                            context="{'group_by':'carbon_database_id'}"
                        />
                        <filter
                            string="Contributor"
                            name="by_carbon_contributor_id"
                            context="{'group_by':'carbon_contributor_id'}"
                        />
                        <filter
                            string="Uncertainty"
                            name="by_uncertainty_percentage"
                            context="{'group_by':'uncertainty_percentage'}"
                        />
                        <filter
                            string="Type"
                            name="by_factor_value_type_id"
                            context="{'group_by':'factor_value_type_id'}"
                        />
                        <filter
                            string="Create date"
                            name="by_create_date"
                            context="{'group_by':'create_date'}"
                        />
                        <filter
                            string="Detailed by gas"
                            name="by_ghg_view_mode"
                            context="{'group_by':'ghg_view_mode'}"
                        />
                        <filter
                            string="Unit of measure"
                            name="by_carbon_uom_id"
                            context="{'group_by':'carbon_uom_id'}"
                        />
                        <separator />
                        <filter
                            string="Country"
                            name="by_country_id"
                            context="{'group_by':'country_id'}"
                        />
                        <filter
                            string="Country Group"
                            name="by_country_group_id"
                            context="{'group_by':'country_group_id'}"
                        />
                    </group>
                </search>
            </field>
        </record>
        <record id="carbon_factor_form" model="ir.ui.view">
            <field name="name">carbon.factor.form</field>
            <field name="model">carbon.factor</field>
            <field name="arch" type="xml">
                <form>
                    <field invisible="1" name="carbon_currency_id" />
                    <field invisible="1" name="recent_value_id" />
                    <field invisible="1" name="has_invalid_value" />
                    <field invisible="1" name="active" />
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button
                                class="oe_stat_button"
                                icon="fa-leaf"
                                name="action_see_carbon_line_origin_ids"
                                type="object"
                                invisible="carbon_line_origin_qty &lt; 1"
                            >
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field
                                            name="carbon_line_origin_qty"
                                            nolabel="1"
                                            widget="statinfo"
                                        />
                                    </span>
                                    <span class="o_stat_text">Carbon Footprint</span>
                                </div>
                            </button>
                            <button
                                class="oe_stat_button"
                                icon="fa-bars"
                                name="action_see_account_move_ids"
                                type="object"
                                invisible="account_move_qty &lt; 1"
                            >
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field
                                            name="account_move_qty"
                                            nolabel="1"
                                            widget="statinfo"
                                        />
                                    </span>
                                    <span class="o_stat_text">Account Move</span>
                                </div>
                            </button>
                            <button
                                class="oe_stat_button"
                                icon="fa-sitemap"
                                name="action_see_child_ids"
                                type="object"
                                invisible="child_qty &lt; 1"
                            >
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field
                                            name="child_qty"
                                            nolabel="1"
                                            widget="statinfo"
                                        />
                                    </span>
                                    <span class="o_stat_text">Children Factors</span>
                                </div>
                            </button>
                            <button
                                class="oe_stat_button"
                                icon="fa-book"
                                name="action_see_chart_of_account_ids"
                                type="object"
                                invisible="chart_of_account_qty &lt; 1"
                            >
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field
                                            name="chart_of_account_qty"
                                            nolabel="1"
                                            widget="statinfo"
                                        />
                                    </span>
                                    <span class="o_stat_text">Accounts</span>
                                </div>
                            </button>
                            <button
                                class="oe_stat_button"
                                icon="fa-th-list"
                                name="action_see_product_ids"
                                type="object"
                                invisible="product_qty &lt; 1"
                            >
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field
                                            name="product_qty"
                                            nolabel="1"
                                            widget="statinfo"
                                        />
                                    </span>
                                    <span class="o_stat_text">Products</span>
                                </div>
                            </button>
                            <button
                                class="oe_stat_button"
                                icon="fa-sort"
                                name="action_see_product_categ_ids"
                                type="object"
                                invisible="product_categ_qty &lt; 1"
                            >
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field
                                            name="product_categ_qty"
                                            nolabel="1"
                                            widget="statinfo"
                                        />
                                    </span>
                                    <span class="o_stat_text">Products Categories</span>
                                </div>
                            </button>
                            <button
                                class="oe_stat_button"
                                icon="fa-list"
                                name="action_see_product_supplier_ids"
                                type="object"
                                invisible="product_supplierinfo_qty &lt; 1"
                            >
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field
                                            name="product_supplierinfo_qty"
                                            nolabel="1"
                                            widget="statinfo"
                                        />
                                    </span>
                                    <span
                                        class="o_stat_text"
                                    >Product Suppliers Infos</span>
                                </div>
                            </button>
                        </div>
                        <widget
                            bg_color="bg-danger"
                            invisible="active"
                            name="web_ribbon"
                            title="Archived"
                        />
                        <div class="d-flex align-items-center">
                            <div class="w-75">
                                <label for="name" />
                                <h1>
                                    <field
                                        name="name"
                                        placeholder="e.g. Electric Train"
                                        widget="text"
                                    />
                                </h1>
                            </div>
                            <h2 class="ms-auto">
                                <field
                                    invisible="not recent_value_id or not carbon_compute_method"
                                    name="carbon_value"
                                />
                                <field
                                    invisible="not recent_value_id or not carbon_compute_method"
                                    name="carbon_currency_label"
                                    class="ms-2"
                                />
                                <field
                                    invisible="not recent_value_id or not carbon_compute_method"
                                    name="unit_label"
                                    class="ms-1"
                                />
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="root" />
                            </group>
                            <group>
                                <field name="parent_id" />
                            </group>
                        </group>
                        <group>
                            <field name="category" />
                        </group>
                        <group>
                            <group>
                                <field name="carbon_compute_method" />
                                <field name="carbon_database_id" />
                            </group>
                            <group>
                                <field
                                    name="uncertainty_percentage"
                                    widget="percentage"
                                />
                                <field name="carbon_contributor_id" />
                            </group>
                            <group>
                                <field name="country_id" />
                                <field
                                    name="required_type_ids"
                                    widget="many2many_tags"
                                />
                            </group>
                            <group>
                                <field name="country_group_id" />
                                <field name="comment" placeholder="Extra Comments..." />
                            </group>
                        </group>
                        <notebook invisible="carbon_compute_method == False">
                            <page name="page_values" string="Values">
                                <group>
                                    <field
                                        name="ghg_view_mode"
                                        widget="boolean_toggle"
                                    />
                                </group>
                                <div
                                    class="alert alert-danger col-6"
                                    colspan="2"
                                    invisible="has_invalid_value == False"
                                    role="alert"
                                > Some values miss a currency or a unit of measure <br
                                /> Please fix them before using this factor. </div>
                                <field colspan="2" name="value_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="date" />
                                        <field name="type_id" />
                                        <field
                                            column_invisible="1"
                                            name="is_carbon_value_computed"
                                        />
                                        <field
                                            decoration-it="is_carbon_value_computed"
                                            decoration-muted="is_carbon_value_computed"
                                            force_save="1"
                                            name="carbon_value"
                                            readonly="is_carbon_value_computed"
                                        />
                                        <field
                                            column_invisible="parent.ghg_view_mode"
                                            name="carbon_currency_label"
                                            string=" "
                                        />
                                        <field
                                            column_invisible="1"
                                            name="is_ghg_detailed_value"
                                        />
                                        <field
                                            column_invisible="not parent.ghg_view_mode"
                                            decoration-it="is_ghg_detailed_value"
                                            decoration-muted="is_ghg_detailed_value"
                                            force_save="1"
                                            name="co2_value"
                                            readonly="not is_carbon_value_computed and carbon_value"
                                        />
                                        <field
                                            column_invisible="not parent.ghg_view_mode"
                                            decoration-it="is_ghg_detailed_value"
                                            decoration-muted="is_ghg_detailed_value"
                                            force_save="1"
                                            name="ch4_value"
                                            readonly="not is_carbon_value_computed and carbon_value"
                                        />
                                        <field
                                            column_invisible="not parent.ghg_view_mode"
                                            decoration-it="is_ghg_detailed_value"
                                            decoration-muted="is_ghg_detailed_value"
                                            force_save="1"
                                            name="n2o_value"
                                            readonly="not is_carbon_value_computed and carbon_value"
                                        />
                                        <field
                                            column_invisible="not parent.ghg_view_mode"
                                            decoration-it="is_ghg_detailed_value"
                                            decoration-muted="is_ghg_detailed_value"
                                            force_save="1"
                                            name="sf6_value"
                                            readonly="not is_carbon_value_computed and carbon_value"
                                        />
                                        <field
                                            column_invisible="not parent.ghg_view_mode"
                                            decoration-it="is_ghg_detailed_value"
                                            decoration-muted="is_ghg_detailed_value"
                                            force_save="1"
                                            name="hfc_value"
                                            readonly="not is_carbon_value_computed and carbon_value"
                                        />
                                        <field
                                            column_invisible="not parent.ghg_view_mode"
                                            decoration-it="is_ghg_detailed_value"
                                            decoration-muted="is_ghg_detailed_value"
                                            force_save="1"
                                            name="pfc_value"
                                            readonly="not is_carbon_value_computed and carbon_value"
                                        />
                                        <field
                                            column_invisible="not parent.ghg_view_mode"
                                            decoration-it="is_ghg_detailed_value"
                                            decoration-muted="is_ghg_detailed_value"
                                            force_save="1"
                                            name="nf3_value"
                                            readonly="not is_carbon_value_computed and carbon_value"
                                        />
                                        <field
                                            column_invisible="not parent.ghg_view_mode"
                                            decoration-it="is_ghg_detailed_value"
                                            decoration-muted="is_ghg_detailed_value"
                                            force_save="1"
                                            name="other_ghg_value"
                                            readonly="not is_carbon_value_computed and carbon_value"
                                        />
                                        <field
                                            column_invisible="parent.carbon_compute_method != 'physical'"
                                            name="carbon_uom_id"
                                            required="parent.carbon_compute_method == 'physical'"
                                        />
                                        <field
                                            column_invisible="parent.carbon_compute_method != 'monetary'"
                                            name="carbon_monetary_currency_id"
                                            required="parent.carbon_compute_method == 'monetary'"
                                        />
                                        <field name="comment" />
                                        <button
                                            confirm="Do you really want to erase the precision value?"
                                            icon="fa-solid fa-eraser"
                                            invisible="not parent.ghg_view_mode"
                                            name="action_reset_precision_value"
                                            title="Erase the precision value"
                                            type="object"
                                        />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter />
                </form>
            </field>
        </record>
        <record id="carbon_factor_view_graph" model="ir.ui.view">
            <field name="name">carbon.factor.graph.view</field>
            <field name="model">carbon.factor</field>
            <field name="arch" type="xml">
                <graph sample="1" string="Emission Factor Analysis">
                    <field name="name" />
                    <field name="carbon_value" type="measure" />
                    <field invisible="1" name="uncertainty_percentage" />
                </graph>
            </field>
        </record>
        <record id="carbon_factor_view_pivot" model="ir.ui.view">
            <field name="name">carbon.factor.pivot.view</field>
            <field name="model">carbon.factor</field>
            <field name="arch" type="xml">
                <pivot sample="1" string="Emission Factor Analysis">
                    <field name="name" type="col" />
                    <field interval="month" name="carbon_date" type="row" />
                    <field name="carbon_value" type="measure" />
                </pivot>
            </field>
        </record>

        <record id="carbon_factor_view_kanban" model="ir.ui.view">
            <field name="name">carbon.factor.kanban.view</field>
            <field name="model">carbon.factor</field>
            <field name="arch" type="xml">
                <kanban
                    create="true"
                    can_open="1"
                    highlight_color="color"
                    default_group_by="carbon_uom_id"
                    default_order="sequence, id desc"
                    group_create="false"
                >
                    <templates>
                        <t t-name="menu" t-if="!selection_mode">
                            <div role="separator" class="dropdown-divider" />
                            <field name="color" widget="kanban_color_picker" />
                        </t>
                        <t t-name="card">
                            <main>
                                <field name="name" class="fw-bold fs-5" />
                                <div class="text-muted d-flex flex-column">
                                    <field name="parent_id" />
                                    <span t-if="record.carbon_database_id">
                                        DB: <field name="carbon_database_id" />
                                    </span>
                                </div>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="carbon_factor_action_reporting" model="ir.actions.act_window">
            <field name="name">Emission Factors Analysis</field>
            <field name="res_model">carbon.factor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">graph,pivot</field>
        </record>
        <record id="carbon_factor_action" model="ir.actions.act_window">
            <field name="name">Emission Factors</field>
            <field name="res_model">carbon.factor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">list,kanban,hierarchy,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_neutral_face">
                    This is the emission factors dashboard
                </p>
                <p>
                    You can now create your first emission factor<br />
                </p>
            </field>
        </record>

        <record id="action_recompute_carbon_carbon_factor" model="ir.actions.server">
            <field name="name">Re-compute CO2</field>
            <field name="model_id" ref="sustainability.model_carbon_factor" />
            <field name="binding_model_id" ref="sustainability.model_carbon_factor" />
            <field name="state">code</field>
            <field
                name="code"
            >action = records.action_carbon_recompute_entries()</field>
        </record>
    </data>
</odoo>
