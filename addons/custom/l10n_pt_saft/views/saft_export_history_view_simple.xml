<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- SAF-T History List View -->
        <record id="view_saft_export_history_list" model="ir.ui.view">
            <field name="name">SAF-T Export History List</field>
            <field name="model">l10n.pt.saft.export.history</field>
            <field name="arch" type="xml">
                <list string="SAF-T Export History" create="false" edit="false">
                    <field name="create_date" string="Generated On"/>
                    <field name="period_display" string="Period"/>
                    <field name="company_id"/>
                    <field name="export_type"/>
                    <field name="saft_filename" string="Filename"/>
                    <field name="file_size" string="Size (KB)"/>
                    <field name="user_id" string="Generated by"/>
                </list>
            </field>
        </record>

        <!-- SAF-T History Form View -->
        <record id="view_saft_export_history_form" model="ir.ui.view">
            <field name="name">SAF-T Export History Form</field>
            <field name="model">l10n.pt.saft.export.history</field>
            <field name="arch" type="xml">
                <form string="SAF-T Export History" create="false" edit="false">
                    <header>
                        <button name="action_download_file" 
                                string="Download File" 
                                type="object" 
                                class="btn-primary"/>
                        <button name="action_regenerate_saft" 
                                string="Regenerate SAF-T" 
                                type="object" 
                                class="btn-secondary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name"/>
                            </h1>
                        </div>
                        
                        <group string="Export Information">
                            <group>
                                <field name="company_id" readonly="1"/>
                                <field name="export_type" readonly="1"/>
                                <field name="create_date" string="Generated On" readonly="1"/>
                                <field name="user_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="date_from" readonly="1"/>
                                <field name="date_to" readonly="1"/>
                                <field name="period_display" readonly="1"/>
                            </group>
                        </group>
                        
                        <group string="File Information">
                            <field name="saft_filename" readonly="1"/>
                            <field name="file_size" readonly="1"/>
                            <field name="saft_file" filename="saft_filename" readonly="1"/>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <!-- SAF-T History Action -->
        <record id="action_saft_export_history" model="ir.actions.act_window">
            <field name="name">SAF-T Export History</field>
            <field name="res_model">l10n.pt.saft.export.history</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_saft_export_history_list"/>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_saft_history"
                  name="SAF-T History"
                  parent="account.menu_finance_reports"
                  action="action_saft_export_history"
                  sequence="51"/>

    </data>
</odoo>
